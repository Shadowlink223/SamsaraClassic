    +NOGRAVITY
    +THRUSPECIES
    Damage (random(1,8)*15)
    Species "Player"
    Speed 500
    DamageType "Spectral"
    RenderStyle Add
    Alpha 0.75
    States
    {
      Spawn:
        ACLO E 1
        ACLO E 1 
        loop
      Death:
        ACLO E 1
        stop
      Crash:
