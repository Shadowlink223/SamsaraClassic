ACTOR QuakeImpalerExplode
{
    Radius 1
    Height 1
    Speed 0
    DamageType "EnemyInfightDamage"
    +NOCLIP
    -SOLID
    Obituary "%k shouldn't have killed %o with this."
    States
    {
      Spawn:
        TNT1 A 0
        TNT1 A 1 A_Explode(128,128)
        Stop
    }
}

